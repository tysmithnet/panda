<client:Launcher x:Class="Panda.EverythingLauncher.EverythingLauncher"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Panda.EverythingLauncher"
             xmlns:client="clr-namespace:Panda.Client;assembly=Panda.Client"
             d:DataContext="{d:DesignInstance local:EverythingLauncherViewModel}"
             Activated="EverythingLauncher_OnActivated"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             Title="Everything Launcher">
    <DockPanel>
        <TextBox x:Name="SearchText" DockPanel.Dock="Top" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" TextChanged="TextBoxBase_OnTextChanged"></TextBox>
        <ListBox x:Name="ResultsListBox" ItemsSource="{Binding EverythingResults}" SelectionChanged="Selector_OnSelectionChanged" SelectionMode="Extended" 
                 PreviewMouseRightButtonDown="ResultsListBox_OnPreviewMouseRightButtonDown" PreviewKeyUp="ResultsListBox_OnPreviewKeyUp">
            <ListBox.ContextMenu>
                <ContextMenu ItemsSource="{Binding ContextMenuItems}">
                </ContextMenu>
            </ListBox.ContextMenu>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{Binding Icon}"></Image>
                        <StackPanel>
                            <Label Content="{Binding Name}"></Label>
                            <Label Content="{Binding Directory}"></Label>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </DockPanel>
</client:Launcher>

