<client:Launcher x:Class="Panda.EverythingLauncher.EverythingLauncher"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:local="clr-namespace:Panda.EverythingLauncher"
                 xmlns:client="clr-namespace:Panda.Client;assembly=Panda.Client"
                 xmlns:commonControls="clr-namespace:Panda.CommonControls;assembly=Panda.CommonControls"
                 d:DataContext="{d:DesignInstance local:EverythingLauncherViewModel}"
                 Loaded="EverythingLauncher_OnLoaded"
                 mc:Ignorable="d"
                 d:DesignHeight="300" d:DesignWidth="300"
                 Title="Everything Launcher">
    <DockPanel>
        <TextBox x:Name="SearchText" DockPanel.Dock="Top"
                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                 TextChanged="TextBoxBase_OnTextChanged" />
        <ListBox x:Name="ResultsListBox" ItemsSource="{Binding EverythingResults}"
                 SelectionChanged="Selector_OnSelectionChanged" SelectionMode="Extended"
                 PreviewMouseRightButtonDown="ResultsListBox_OnPreviewMouseRightButtonDown"
                 PreviewKeyUp="ResultsListBox_OnPreviewKeyUp">
            <ListBox.ContextMenu>
                <ContextMenu ItemsSource="{Binding ContextMenuItems}" />
            </ListBox.ContextMenu>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <!--<StackPanel Orientation="Horizontal">
                        <Image Source="{Binding Icon}" />
                        <StackPanel>
                            <Label Content="{Binding Name}" />
                            <Label Content="{Binding Directory}" />
                        </StackPanel>
                    </StackPanel>                                                                                                                                          -->
                    <commonControls:ImageTextItem HeaderText="Hello" SubHeaderText="World"></commonControls:ImageTextItem> 
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </DockPanel>
</client:Launcher>