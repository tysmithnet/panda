<UserControl x:Class="Panda.CommonControls.ImageTextItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Panda.CommonControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance local:ImageTextItemViewModel}">
    <DockPanel>
        <Image DockPanel.Dock="Left" Source="{Binding ImageSource}"></Image>
        <StackPanel>
            <TextBox x:Name="HeaderTextBox" Text="{Binding HeaderText}" TextChanged="TextBoxBase_OnTextChanged"></TextBox>
            <TextBox x:Name="SubHeaderTextBox" Text="{Binding SubHeaderText}" TextChanged="SubHeaderText_OnTextChanged"></TextBox>
        </StackPanel>
    </DockPanel>
</UserControl>
